{
  "version": 3,
  "extra_config": {
    "router": {
      "return_error_msg": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/auth/signup",
      "method": "POST",
      "output_encoding": "no-op",
      "input_headers": ["Content-Type"],
      "backend": [
        {
          "host": ["http://auth-service:3000"],
          "url_pattern": "/auth/signup"
        }
      ],
      "extra_config": {
        "validation/json-schema": {
          "type": "object",
          "required": ["email", "password"]
        }
      }
    },
    {
      "endpoint": "/api/auth/login",
      "method": "POST",
      "output_encoding": "json",
      "input_headers": ["Content-Type"],
      "backend": [
        {
          "host": ["http://auth-service:3000"],
          "url_pattern": "/auth/login"
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "kid": "sim2",
          "keys_to_sign": ["access_token"],
          "jwk_local_path": "./jwk_private_key.json",
          "disable_jwk_security": true
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["email", "password"]
        }
      }
    },
    {
      "endpoint": "/api/shortened-url",
      "method": "POST",
      "output_encoding": "no-op",
      "input_headers": ["Content-Type", "Authorization"],
      "backend": [
        {
          "host": ["http://url-shortener:3000"],
          "url_pattern": "/shortened-url"
        }
      ],
      "extra_config": {
        "validation/json-schema": {
          "type": "object",
          "required": ["originalUrl"]
        }
      }
    },
    {
      "endpoint": "/api/shortened-url",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://url-shortener:3000"],
          "url_pattern": "shortened-url/"
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "./jwk_private_key.json",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/api/shortened-url/{id}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": ["http://url-shortener:3000"],
          "url_pattern": "shortened-url/redirect/{id}"
        }
      ]
    }
  ]
}
